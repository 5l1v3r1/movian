widget(image, {
  .color = [1.0, 1.0, 1.0] *
    (0.25 + 0.75 * iir(isFocused(), 8) + 0.5 * isHovered());

  .align = bottom;
  .focusable = true;
  .focusOnClick = true;
  .alphaEdges = 2;
  .source = devoidify($self.metadata.album_art, "theme://icons/256x256/CD.png");
  .hqScaling = true;
  onEvent(activate, navOpen($self.url));

});