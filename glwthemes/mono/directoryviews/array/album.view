widget(image, {
  .color = 0.5 + isHovered() * 0.4 + isFocused() * 0.4 + isPressed() * 0.4;
  .hqScaling = true;
  .source = $self.metadata.album_art ?? "theme://icons/256x256/Disc.png";

  .alpha = iir(isReady(), 10);
  .saturation = 1 - iir(isReady(), 10);

});




#import "theme://include/defs.view"
#import "theme://directoryviews/array/simple.view"

SIMPLE_ITEM_IMAGE($self.metadata.title,
		  $self.metadata.album_art,
		  navOpen($self.url),
		  PLATE_COLOR_IMAGE());
