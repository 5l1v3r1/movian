#import "theme://include/defs.view"

widget(backdrop, {
  .width = KNOB_SIZE();
  .focusable = 1.0;

  .alphaSelf = 0.2 + iir(isFocused() * 1, 8) + isHovered() * 0.1;

  .color = PLATE_COLOR_OFF();
  PLATE_GFX();

  onEvent(activate, {
    $self.model.value = !$self.model.value;
  });

  widget(label, {
    .align = center;
    .caption = "Off";
  });
});