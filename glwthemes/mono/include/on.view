#import "theme://include/defs.view"

widget(backdrop, {
  .width = KNOB_SIZE();
  .focusable = 1.0;

  .alphaSelf = 0.2 + iir(isFocused() * 1, 8) + isHovered() * 0.1;
  .color = PLATE_COLOR_ON();

  PLATE_GFX();

  onEvent(enter, {
    $self.source.value = !$self.source.value;
  });

  widget(label, {
    .align = center;
    .caption = "On";
  });
});