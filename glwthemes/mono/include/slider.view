
#define LIST_Y_SLIDER(ID) {

  widget(slider_y, {

    bind(ID);

    .width = 24;
    .focusable = 0.2 * canScroll();
    .navFocusable = false;

    .alpha = iir(canScroll(), 16);

    widget(backdrop, {

      .alphaSelf = iir(0.5 + 0.5 * (isFocused() || isPressed()), 4);

      .color = [0.45, 0.45, 0.5];
      .source = "theme://graphics/shadedplate.png";
      .border =  [4, 4, 4, 4];
    });
  });
}
