#include "theme://include/plates.model"

widget(backdrop, {
  BUTTON_PROPS(1.0);

  onEvent(enter, navOpen($self.url));

  widget(container_x, {

    widget(image, {
      .source =  translate($self.subtype, "theme://icons/config.png",
			    "audio", "theme://icons/speaker.png",
			    "display", "theme://icons/screen.png"
			   );
    });

    widget(label, {
      .caption = $self.title;
    });
  });
});
