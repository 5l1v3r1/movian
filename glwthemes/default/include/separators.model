
#define HORIZONTAL_SEPARATOR()
{
  widget(backdrop, {
    .source = "theme://images/separator_horizontal.png";
    .border = [3, 1, 3, 1];
    .constraintY = true;
    .alphaSelf = 0.35;
  });
}

#define VERTICAL_SEPARATOR()
{
  widget(backdrop, {
    .source = "theme://images/separator_vertical.png";
    .border = [3, 3, 3, 3];
    .constraintX = true;
    .alphaSelf = 0.35;
  });
 
}
