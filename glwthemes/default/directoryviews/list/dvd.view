#include "theme://include/plates.view"
#include "theme://include/separators.view"

widget(backdrop, {
  HIGHLITE_PROPS();

  widget(container_x, {
    .focusable = true;
    onEvent(enter, navOpen($self.url));

    widget(image, {
      .source = "theme://icons/32x32/cd.png";
    });

    VERTICAL_SEPARATOR();
    
    widget(label, {
      .caption = $self.metadata.title;
    });
  });
});
