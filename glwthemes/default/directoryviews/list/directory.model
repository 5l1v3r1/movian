#include "theme://include/plates.model"
#include "theme://include/separators.model"

widget(backdrop, {
  HIGHLITE_PROPS();

  widget(container_x, {
    .focusable = true;
    onEvent(enter, navOpen($self.url, $self.type, $parent.url));
    
    widget(image, {
      .source = "theme://icons/32x32/folder.png";
    });
    
    VERTICAL_SEPARATOR();

    widget(label, {
      .align = left; 
      .caption = $self.metadata.title;
      .ellipsize = true;
    });
  });
});