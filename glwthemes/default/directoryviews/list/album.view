#include "theme://include/plates.view"
#include "theme://include/separators.view"

widget(backdrop, {
  HIGHLITE_PROPS();

  widget(container_x, {
    .focusable = true;
    onEvent(enter, navOpen($self.url, $self.type, $parent.url));
    
    widget(image, {
      .source = $self.metadata.album_art;
    });

    VERTICAL_SEPARATOR();

    widget(label, {
      .align = left; 
      .caption = $self.metadata.title + " by " + $self.metadata.artist;
      .ellipsize = true;
    });
  });
});