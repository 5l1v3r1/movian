#include "theme://include/plates.view"
#include "theme://include/separators.view"

widget(backdrop, {
  HIGHLITE_PROPS();
  widget(container_x, {

    .focusable = true;
    onEvent(enter, navOpen($self.url, $self.type, $parent.source));

    widget(icon, {
      .source = $self.url;
      .sizeScale = 3;
    });
    
    VERTICAL_SEPARATOR();

    widget(label, {
      .align = left; 
      .caption = $self.metadata.title;
      .weight = 4.0;
      .ellipsize = true;
    });
  });
});
