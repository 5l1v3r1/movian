#include "theme://include/separators.view"
#include "theme://include/plates.view"

widget(container_y, {

  widget(label, {
    .align = left;
    .sizeBias = 9 + 3;
    .caption = $self.source.title;
    .ellipsize = true;
  });

  HORIZONTAL_SEPARATOR();

  widget(container_x, {

    widget(array, {
      .id = "array";
 
      cloner($page.source.nodes, backdrop, {
	BUTTON_PROPS(1.0);
	onEvent(enter, navOpen($self.url, $self.type, $parent.source));
 
	widget(container_y, {
	  widget(image, {
	    .source = $self.metadata.album_art;
	  });

	  widget(label, {
	    .sizeScale = 0.75;
	    .caption = $self.metadata.artist;
	    .ellipsize = true;
	  });
	});
      });
    });

    widget(slider_y, {
      .width = SLIDER_WIDTH();
      .focusable = 0.2;
      bind("array");

      widget(backdrop, {
	KNOB_PROPS();
      });
    });
  });
});
