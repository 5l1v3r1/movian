#include "theme://include/plates.model"

widget(container_x, {
    
  widget(label, {
    .align = right;
    .caption = $self.title;
  });
  
  widget(slider_x, {
    .focusable = true;
    .min = $self.min;
    .max = $self.max;
    .step = $self.step;
    bind($self.value);

    widget(backdrop, {
      HIGHLITE_PROPS();

      widget(label, {
	.caption = float2str($self.value, 0) + $self.unit;
      });
    });
  });
});
