#include "theme://include/plates.view"

widget(container_x, {

  widget(label, {
    .align = right;
    .caption = $self.source.title;
  });

  widget(backdrop, {

    BUTTON_PROPS(1.0);
    
    onEvent(enter, {
      $self.source.value = !$self.source.value;
    });
    
    widget(label, {
      .align = left;
      .caption = translate($self.source.value, "Unknown",
			   0, "Off",
			   1, "On");
    });
  });
});
