#include "theme://include/plates.view"

widget(container_x, {

  widget(label, {
    .align = right;
    .caption = $self.title + ":";
  });

  widget(backdrop, {
    HIGHLITE_PROPS();
    
    widget(text, {
      .align = left;
      .focusable = true;
      .password = $self.password;
      bind($self.value);
    });
  });
});
