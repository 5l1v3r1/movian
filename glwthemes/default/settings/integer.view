#include "theme://include/plates.view"

widget(container_x, {
    
  widget(label, {
    .align = right;
    .caption = $self.source.title;
  });
  
  widget(slider_x, {
    .focusable = true;
    .min = $self.source.min;
    .max = $self.source.max;
    .step = $self.source.step;
    bind($self.value);

    widget(backdrop, {
      HIGHLITE_PROPS();

      widget(label, {
	.caption = int2str($self.source.value) + $self.source.unit;
      });
    });
  });
});
