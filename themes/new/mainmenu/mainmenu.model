	space(1.0);

	PLATE(
	      .weight = 0.75;
	      widget(container_x, {
		  space(1.0);

		  widget(label, {
		      .caption = "Showtime";
		      .align = center;
		    });

		  widget(container_y, {
		      space(1.0);

		      widget(label, {
			  .caption = "Version " + global.version;
