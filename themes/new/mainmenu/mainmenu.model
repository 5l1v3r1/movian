#include "theme://include/plates.model"


#define PLATE_BIG(BODY)
{
  widget(bitmap, {
      .color = COLOR_PRIMARY();
      .source = "theme://images/plate-compact.png";
      .textureBorders = [0.5,  0.5,  0.5,  0.5];
      .vertexBorders  = [0.03, 0.03, 0.03, 0.03];
      .borderScale = true;
      BODY;
    });
}



widget(form, {
    widget(container_y, {
