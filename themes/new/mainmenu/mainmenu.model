	PLATE_BIG(
	      .weight = 6.0f;
	      widget(array, {
		  .id = "primary_apps";
		  .xslices = 6;
		  .yslices = 2;
		});
	      );

	space(1.7);

	widget(container_x, {

	    .weight = 2.0;

	    widget(container_y, {
		
		.weight = 2.0;

		space(4.0);



	      });
	    space(0.1);

	    PLATE_TITLED("Control panel",
