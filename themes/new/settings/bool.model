#include "theme://include/plates.model"

widget(container_x, {

  widget(label, {
    .align = right;
    .caption = $self.title;
  });

  widget(backdrop, {

    BUTTON_PROPS(1.0);
    
    onEvent(enter, {
      $self.value = 1 ^^ $self.value;
    });
    
    widget(label, {
      .align = left;
      .caption = translate(int2str($self.value),
			   ["0", "Off",
			    "1", "On"],
			   "Unknown");
    });
  });
});
