widget(container_x, {

  .focusCursor = true;
  .selectable = true;

  onEvent(enter, genericEvent(navigator, open, self.url));

  widget(bitmap, {
    .keepAspect = true;
    .source = "theme://images/dir.png";
  });

  widget(label, {
    .aspect = 40;
    .weight = 10;
    .caption = self.title;
  });
});
