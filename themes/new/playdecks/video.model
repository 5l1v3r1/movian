#include "theme://include/plates.model"

widget(backdrop, {
  PLATE_PROPS();
  .alphaSelf = 0.25;

  widget(container_y, {

    widget(label, {
      .caption = $self.metadata.title;
    });
	  

    widget(container_x, {
      widget(slider_x, {
	.focusable = 0.2;
	.debug = true;
	.max = $self.metadata.duration;
	bind($self.currenttime);
	widget(backdrop, {
	  KNOB_PROPS();
	  widget(label, {
	    .caption = value2duration($self.currenttime);
	  });
	});
      });
    });
  });
});
