widget(container_x, {

  widget(image, {
    .source = "theme://icons/audio.png";
  });

  widget(container_y, {
    widget(label, {
      .align = left;
      .caption = $self.metadata.title;
    });
  });

  widget(container_y, {
    .aspect = 2;
    widget(label, {
      .align = right;
      .caption = value2duration($self.metadata.duration);
      .weight = 1.5;
    });
  });
});
