widget(container_x, {

  .focusable = true;
  onEvent(enter, genericEvent(navigator, open, $self.url));

  widget(image, {
    .source = "theme://icons/movie.png";
  });

  widget(container_y, {
    widget(label, {.align = left; .caption = $self.metadata.title;});
  });

  widget(container_y, {
    .aspect = 3;
    widget(label, {
      .align = right;
      .caption = value2duration($self.metadata.duration);
    });
  });
});
