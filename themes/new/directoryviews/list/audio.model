
widget(container_x, {

  widget(image, {
    .source = "theme://icons/audio.png";
  });

  widget(container_y, {
    widget(label, {.align = left; .caption = $self.metadata.title;});
    widget(label, {.align = left; .size = 0.75; .caption = $self.metadata.author; });
    widget(label, {.align = left; .size = 0.75; .caption = $self.metadata.album; });
  });

  widget(container_y, {
    .aspect = 2;
    widget(label, {
      .align = right;
      .caption = value2duration($self.metadata.duration);
    });
  });
});
