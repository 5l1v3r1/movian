#include "theme://include/plates.model"

widget(list_y, {
  .focus = leader;
  .slices = 20;
  cloner($page.nodes, container_y, {

    PLATE_FOCUSABLE();
    onEvent(enter, genericEvent(navigator, open, $self.url));

    PLATE_WIDE(
      widget(animator, {
	.time = 0.3;
	.source = "theme://filedirectoryviews/list/" + 
	   $self.media.type + ".model";
      });
      );
  });
});
