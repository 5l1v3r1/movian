widget(container_x, {
  .expand = 3;

  widget(image, {
    .source = $self.media.icon;
    .keepAspect = true;
  });

  widget(expander, {
    .weight = 10;
    
    widget(container_x, {
      widget(label, {
	.caption = $self.media.title;
      });

      widget(label, {
	.align = right;
	.caption = value2duration($self.media.duration);
	.weight = 0.1;
      });
    });
    widget(container_y, {
      widget(label, {
	.caption = $self.media.format;
      });

      widget(label, {
	.align = right;
	.caption = "Video: " + $self.media.videoinfo;
      });

      widget(label, {
	.align = right;
	.caption = "Audio: " + $self.media.audioinfo;
      });
    });
  });


});
