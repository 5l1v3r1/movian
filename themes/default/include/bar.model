#define PROGRESSBAR(VALUE, COLOR)
{
  widget(bitmap, {
    .borderScale = true;
    .alpha = 1.0;
    .textureBorders = [0.5, 0.5, 0.5, 0.5];
    .vertexBorders  = [0.25, 0.25, 0.25, 0.25];
    .source = "theme://images/bar-bg.png";
	    
    widget(container_x, {
      widget(bitmap, {
	.color = COLOR;
	.textureBorders = [0.5, 0.5, 0.5, 0.5];
	.vertexBorders  = [0.5, 0.5, 0.25, 0.25];
	.source = "theme://images/bar-fg.png";
	.xfill = VALUE;
      });
    });
  });
}
