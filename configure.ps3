PLATFORM="ps3"
OSENV="ps3"
DEFAULT_UI="glw"

source support/configure.inc
TOOLCHAIN="${PS3DEV}/ppu/bin/ppu-"
FFMPEG="${TOPDIR}/ps3support/ffmpeg"

enable psl1ght
enable embedded_resources

show_help(){
  common_help
  exit 1
}

for opt do
  optval="${opt#*=}"
  case "$opt" in
  --help) show_help
  ;;
  *)
  common_opt $opt $optval
  esac
done

setup_env "$@"


enable glw_frontend_ps3
enable glw_backend_rsx
enable glw


cat >> ${CONFIG_MAK} <<EOF
CC=${TOOLCHAIN}gcc
STRIP=${TOOLCHAIN}strip
CFLAGS_cfg += -I${PSL1GHT}/include
CFLAGS_cfg += -I${FFMPEG}/include
CFLAGS_cfg += -I${PS3DEV}/ppu/include
CFLAGS_cfg += -I${PS3DEV}/ppu/include/freetype2
CFLAGS_cfg += -DPATH_MAX=512
EOF

#
# 
#
cat >> ${CONFIG_MAK} <<EOF
LDFLAGS_cfg  += -L${FFMPEG}/lib -lswscale -lavformat -lavcodec -lavcore -lavutil
LDFLAGS_cfg  += -T ${PSL1GHT}/lib/linker.x -B${PSL1GHT}/lib -B${PS3DEV}/ppu/lib
LDFLAGS_cfg  += -lgcm_sys -laudio -lreality -lsysutil -lio -lnet -lsysmodule
LDFLAGS_cfg  += -lfreetype
EOF

finalize
