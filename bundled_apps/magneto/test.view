widget(displacement, {
  translation: [0, 0.4, 0];
  widget(mirror, {
    alpha: 0.4;

    widget(coverflow, {
      $view.currentFocused = focusedIndex();

      cloner($page.model.nodes, container_z, {
	$clone.index = cloneIndex();

	focusable: true;
	widget(displacement, {
	  translation: [0, -0.4, 0];
	  widget(video, {
	    source: $self.url;
	    priority: abs($clone.index - $view.currentFocused);
	    audioVolume: select(abs($clone.index - $view.currentFocused), 0, 1);
	    dpadSeek: false;
	  });
	});

	widget(container_y, {
	  space(1);
	  widget(label, {
	    caption: $self.media.metadata.format;
	    sizeScale: 2;
	    shadow: true;
	    outline: true;
	  });
	  widget(bar, {
	    height: $ui.size;
	    color1: 1;
	    color2: 1;
	    fill: $self.media.buffer.current / $self.media.buffer.limit;
	  });
	  space(2);

	});
      });
    });
  });
});
