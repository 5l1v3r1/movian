#import "skin://common.view"



#define InfoLabel() {
  shadow: true;
  outline: true;
  color: 0.6;
}


#define InfoLine(TITLE, VAL) {
  widget(container_x, {
    spacing: 10;
    widget(label, {
      filterConstraintX: true;
      InfoLabel();
      align: right;
      caption: TITLE + ":";
    });
    widget(label, {
      weight: 2;
      filterConstraintX: true;
      TextStyleItem();
      caption: VAL;
    });
  });
}

#define InfoBar(TITLE, VAL) {
  widget(container_x, {
    spacing: 10;
    widget(label, {
      filterConstraintX: true;
      InfoLabel();
      align: right;
      caption: TITLE + ":";
    });

    widget(container_z, {
      weight: 2;
      widget(quad, {
        color: 0.4;
      });
      widget(bar, {
        color1: 1;
        color2: 1;
	fill: VAL;
      });
    });
  });
}


widget(container_y, {
  alpha: iir($ui.sysinfo, 6);
  widget(container_x, {
    widget(backdrop, {
      filterConstraintX: true;
      source: "skin://graphics/popupmenu.png";
      margin: -30;
      border: 56;
      borderOnly: true;
      padding: -56;

      widget(backdrop, {
	alphaSelf: 0.85;
	source: "skin://graphics/popupmenu2.png";
	border: 56;
	color: 0;

	widget(container_y, {

	  widget(label, {
	    TextStyleItem();
	    caption: fmt("Showtime %s", $global.showtime.version);
	    align: center;
	  });

          InfoLine(_("Framerate"),
                   fmt("%2.2f Hz", $ui.framerate));

	  VerticalSeparator();

          InfoLine(_("Memory usage"),
                   fmt("%d kB", $global.system.mem.activeMem));
          InfoLine(_("System Total"),
                   fmt("%d kB", $global.system.mem.systotal));
          InfoLine(_("System Free"),
                   fmt("%d kB", $global.system.mem.sysfree));

          cloner($global.system.cpuinfo.cpus, container_z, {
            InfoBar($self.name, $self.load)
          });

	});
      });
    });
    space(2);
  });
  space(1);
});
