TOPDIR=`pwd`
TMPDIR=${TOPDIR}/tmp
BUILDDIR=build.${PLATFORM}

DEFAULT_THEME="new"


RELEASENAME=`head -n1 ${TOPDIR}/../ChangeLog | awk '{print $2}' | sed s/\(// | sed s/\)//`

CONFIG_LIST="
 libasound
 libfreetype
 libexif
 libpthread
 zlib
