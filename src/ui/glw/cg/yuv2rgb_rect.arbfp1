/*
	ctrl.x == alpha
	ctrl.y == texture y shift (for deinterlace) 
*/


half4 main(	half2 uv,
		uniform sampler2DRect lum : TEXUNIT0,
		uniform sampler2DRect Cr : TEXUNIT1,
		uniform sampler2DRect Cb : TEXUNIT2,
		uniform float4 ctrl,
		uniform float3 r_vec,
		uniform float3 g_vec,
		uniform float3 b_vec
	) : COLOR
{
	const half3 t = {-0.0625, -0.5, -0.5};
	half3 yuv, rgb;

	half2 c_uv;

	c_uv.x = uv.x * 0.5;
	c_uv.y = uv.y * 0.5;

	uv.y = uv.y + ctrl.y;

	yuv = half3(texture2DRect(lum, uv).x, 
		    texture2DRect(Cb, c_uv).x,
                    texture2DRect(Cr, c_uv).x) + t;
	rgb = half3(dot(yuv, r_vec), dot(yuv, g_vec), dot(yuv, b_vec));
	return half4(rgb, ctrl.x);
			 
}
